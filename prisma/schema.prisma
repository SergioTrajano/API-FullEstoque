// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  name     String

  categories    Category[]
  clients       Client[]
  products      Product[]
  manufacturers Manufacturer[]
  sells         Sell[]
  purchases     Purchase[]

  @@map("users")
}

model Category {
  id     Int    @id @default(autoincrement())
  userId Int
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  name   String

  products Product[]

  @@unique([userId, name])
  @@map("categories")
}

model Product {
  id             Int          @id @default(autoincrement())
  userId         Int
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  categoryId     Int
  category       Category     @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  name           String
  description    String
  barcode        String
  price          Decimal      @db.Decimal(7, 2)
  manufacturerId Int
  manufacturer   Manufacturer @relation(fields: [manufacturerId], references: [id], onDelete: Cascade)

  purchases Purchase[]
  sells     Sell[]

  @@unique([userId, barcode])
  @@map("products")
}

model Client {
  id          Int    @id @default(autoincrement())
  userId      Int
  user        User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  name        String
  phoneNumber Int
  CPF         String
  RG          Int

  sells Sell[]

  @@unique([CPF, userId])
  @@map("clients")
}

model Purchase {
  id         Int      @id @default(autoincrement())
  userId     Int
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  productId  Int
  product    Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  quantity   Int
  totalPrice Decimal  @db.Decimal(7, 2)
  createdAt  DateTime @default(now())

  @@map("purchases")
}

model Sell {
  id         Int      @id @default(autoincrement())
  userId     Int
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  productId  Int
  clientId   Int
  client     Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
  product    Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  quantity   Int
  totalPrice Decimal  @db.Decimal(7, 2)
  createdAt  DateTime @default(now())

  @@map("sells")
}

model Manufacturer {
  id     Int    @id @default(autoincrement())
  userId Int
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  name   String

  products Product[]

  @@unique([userId, name])
  @@map("manufacturers")
}
